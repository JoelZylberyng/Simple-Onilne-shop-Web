extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Register

        p Please fill the form

        -data = data || {}

        if errors
          ul.my-errors
            for error in errors
              div.alert.alert-danger #{error.msg}

        // register form
        form(method='POST' action='/users/register')
          div.form-group
            label(for='name') Username:
            input#name.form-control(type='text', placeholder='username' name='username', value=data.username)
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email', value=data.email)
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up