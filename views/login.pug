extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Login

                form(method='POST' action='/users/login')
                    div.form-group
                        label(for='name') Username:
                        input#name.form-control(type='text' placeholder='username' name='username')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' placeholder='password' name='password')
                    div.form-group
                        label(for="checkbox")
                         input(type='checkbox' id="checkbox" name='remember_me' value='yes')
                         span Remember me
                    button.btn.btn-primary(type='submit' id="login") Login